<header class="site-header" role="banner">
  <div class="container">
    <nav class="nav" role="navigation" aria-label="Main navigation">
      <a href="/" class="nav-logo" aria-label="{{ site.title }} - Home">
        <span class="logo-text">AECTURA</span>
      </a>
      
      <button class="nav-toggle" aria-expanded="false" aria-controls="nav-menu" aria-label="Toggle navigation">
        <span class="nav-toggle-bar"></span>
        <span class="nav-toggle-bar"></span>
        <span class="nav-toggle-bar"></span>
      </button>
      
      <ul class="nav-menu" id="nav-menu">
        {%- for item in site.navigation -%}
        <li class="nav-item">
          <a href="{{ item.url }}" class="nav-link{% if page.url == item.url %} is-active{% endif %}">
            {{ item.label }}
          </a>
        </li>
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>
