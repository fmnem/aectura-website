---
layout: base.njk
---

<article class="page">
  {% if title %}
  <header class="page-header">
    <div class="container">
      <h1 class="page-title">{{ title }}</h1>
      {% if subtitle %}
      <p class="page-subtitle">{{ subtitle }}</p>
      {% endif %}
    </div>
  </header>
  {% endif %}
  
  <div class="page-content">
    <div class="container">
      {{ content | safe }}
    </div>
  </div>
</article>
